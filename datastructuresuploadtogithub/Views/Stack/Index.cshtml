
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stack</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> -->

</head>
<body>

    <div class="w3-sidebar w3-light-grey w3-bar-block">
        <h3 class="w3-bar-item">Stack</h3>

        <a href="@Url.Action("Add", "Stack")" class="w3-bar-item w3-button">Add one time to Stack</a><br />
        <a href="@Url.Action("HugeList", "Stack")" class="w3-bar-item w3-button">Add Huge List of Items to Stack</a><br />
        <a href="@Url.Action("Display", "Stack")" class="w3-bar-item w3-button">Display Stack</a><br />
        <a href="@Url.Action("Delete", "Stack")" class="w3-bar-item w3-button">Delete from Stack</a><br />
        <a href="@Url.Action("Clear", "Stack")" class="w3-bar-item w3-button">Clear Stack</a><br />
        <a href="@Url.Action("Search", "Stack")" class="w3-bar-item w3-button">Search Stack</a><br />
        <a href="@Url.Action("GoHome", "Stack")" class="w3-bar-item w3-button">Return to Main Menu</a>
    </div>

    <!-- print -->
    @Html.Raw((String)ViewBag.Message)

    @foreach (var sData in ViewBag.MyStack)
    {
        <p>@sData</p>
    }
</body>
</html>